# OpenAI Configuration (REQUIRED)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# AWS Configuration (OPTIONAL - for Amazon Textract)
# If not provided, system will fallback to Tesseract OCR
# Get credentials from: https://console.aws.amazon.com/iam/
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_DEFAULT_REGION=us-east-1

# Flask Configuration (OPTIONAL)
# Secret key for session management - change this in production
SECRET_KEY=your-secret-key-for-sessions-change-in-production

# Application Configuration (OPTIONAL)
# Set to 'production' to disable debug mode
FLASK_ENV=development

# Processing Configuration (OPTIONAL)
# Maximum file size for uploads (in MB)
MAX_FILE_SIZE=50

# Cost Tracking (OPTIONAL)
# Set to 'true' to enable detailed cost tracking
ENABLE_COST_TRACKING=true

# Logging Configuration (OPTIONAL)
# Set log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO